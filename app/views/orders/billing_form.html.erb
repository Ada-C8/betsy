<h2>Billing Info</h2>


<%# hard coded order id%>
<%# TODO: uodate order id that is passed into show_order_path %>
<%= form_for @billing, url: show_order_path(@order.id) do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>

  <%= f.label "Street" %>
  <%= f.text_field :street %>

  <%= f.label "Apt" %>
  <%= f.text_field :apt %>

  <%= f.label "City" %>
  <%= f.text_field :city %>

  <%= f.label "State" %>
  <%= f.text_field :state %>

  <%= f.label "Billing Zip Code" %>
  <%= f.text_field :bill_zip %>

  <%= f.label "Shipping Zip Code" %>
  <%= f.text_field :ship_zip %>

  <%= f.label "Email" %>
  <%= f.text_field :email %>

  <%= f.label "Credit card number" %>
  <%= f.text_field :credit_card %>

  <%= f.label "Expiration date" %>
  <%= f.text_field :exp %>

  <%= f.label "CVV" %>
  <%= f.text_field :cvv %>

  <%= f.submit "Submit", :class=>"button"  %>

<% end %>
