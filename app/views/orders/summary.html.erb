<h1> Order Summary</h1>

<% if @order_items %>
  <% @order_items.each do |item| %>
      <p> Name: <%= item.product.name %></p>
      <p> Unit Price: <%= number_to_currency item.product.price %></p>
      <p> Quantity: <%= item.quantity %></p>
      <p> Status: <%= item.status %></p>
    <% end %>
    <p> Total Price: <%= @order.calculate_total %></p>
  <% end %>
