<%= form_for @order do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :card_number %>
  <%= f.text_field :card_number %>

  <%= f.label :card_exp, 'Expiration date' %>
  <%= f.date_select :card_exp, :use_month_numbers => true, :discard_day => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :order => [:month, :year] %>

  <%= f.label :card_cvv %>
  <%= f.text_field :card_cvv %>

  <%= f.submit "Complete Order"%>
<% end %>
