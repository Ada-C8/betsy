<h1>Order <%= @order.id %></h1>

<h3>Products of yours in order <%= @order.id %></h3>

<table>
  <thead>
    <tr>
      <th>
        Product
      </th>
      <th>
        Product price
      </th>
      <th>
        Quantity
      </th>
      <th>
        Total cost
      </th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |item| %>
    <tr>
      <td>
        <p><%= item.product.name %> </p>
      </td>
      <td>
        <%= number_to_currency item.product.price %>
      </td>
      <td>
        <%= item.quantity %>
      </td>
      <td>
        <%= number_to_currency (item.product.price * item.quantity) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
  <p>Your Total: <%= number_to_currency @order.calculate_total %></p>
