<h1> Receipt </h1>

<h3> <%= @payment_info.buyer_name %>'s Purchase Summary: </h3>

<ul>
  <li>Name: <%= @payment_info.buyer_name %></li>
  <li>Email: <%= @payment_info.email %></li>
  <li>Address: <%= @payment_info.mailing_address %></li>
  <li>Card number: ####-####-####- <%= @last_four_cc %></li>
  <li>Expiration date: <%= @payment_info.expiration %></li>
</ul>

<ul>
  <li>
    <table class='order_info_table'>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Status</th>
          <th class='align_right'>Total</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @order.id %></td>
          <td><%= readable_date(@order.updated_at)%></td>
          <td><%= @order.status %></td>
          <td class='align_right'><%= readable_price(@order.order_total) %></td>
        </tr>
      </tbody>
    </table>

    <table class='products_info_table'>
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Subtotal</th>
        </tr>
      </thead>

      <tbody>
      <% @order.order_products.each do |op| %>
        <%# if op.product.merchant_id == session[:merchant_id] %>
        <tr>
          <td><%= link_to op.product.name, product_path(op.product_id) %></td>
          <td><%= op.quantity %></td>
          <td><%= readable_price(op.subtotal) %></td>
          <td class='align_right <%= hidden %>'>
            <%= link_to "Buy it again!", product_path(op.product_id), class: "button" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </li>
</ul>

<p class='align_right <%= hidden %>'><%= "Check #{@payment_info.email} to track your shipping!" %></p>
<p class='align_right <%= hidden %>'><%=  link_to "Get back to shopping!", root_path, class: "button"%></p>
