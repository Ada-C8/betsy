<h1>Show <%= @merchant.username %> orders</h1>

<% @orders.each do |order| %>
<table>
  <thead>
    <tr>
      <th>Order_ID</th>
      <th>Order Placed</th>
      <th>Order Status</th>
      <th>Merchant Order Total</th>
      <th>Shipping Info</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.payment.created_at %></td>
      <td>subtotal here</td>
      <td><%= order.status %></td>
      <td>link to payments show here</td>
    </tr>
    <tr>
      <th colspan="2">products</td>
      <th>quantity</th>
      <th>subtotal</th>
      <th>shipped</th>
    </tr>

      <% order.products.each do |product| %>
      <tr>
        <td colspan="2"><%= product.name %></td>
        <td><%= product.order_items[0].quantity %></td>
        <td><%= product.order_items[0].quantity * product.price %></td>
        <td><%= product.order_items[0].shipped %></td>
      </tr>
      <% end %>


  </tbody>
</table>
<% end %>
