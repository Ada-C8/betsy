<section class="row forms">
<h1>Order Lookup</h1>
<%= form_tag(orders_found_path, method: :get) do %>
<%= label_tag :id, 'Order #' %>
<%= number_field_tag :id %>

<%= label_tag :name %>
<%= text_field_tag :name %>

<%= label_tag :email %>
<%= text_field_tag :email %>

<%= submit_tag "Submit", class: "button" %>
<% end %>

</section>
