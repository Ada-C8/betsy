<h2><%= @product.name %> details</h2>

<%= link_to "Edit Product", edit_product_path, :class=>"button"  %>
<%= link_to "Delete Product", product_path(@product), method: :delete, :class=>"button" %>


<p>description: <%= @product.description %></p>
<p>price: <%= @product.price %></p>
<p>stock: <%= @product.stock %></p>
<p>photo: <%= @product.photo_URL %></p>

<%= link_to "Add to cart", "#", :class=>"button"  %>

<p>
  <%= form_for Order.new do |f| %>
  <%#= f.hidden_field :status, value: "pending" %>
  <%#= f.hidden_field :user_id, value: session[:logged_in_user] %>
  <%= f.submit class: "button"%>
  <% end %>
</p>
