<section class="row">
  <div class="large-6 columns">
    <h3><%= @product.name %></h3>
    <p>Description: <%= @product.description %></p>
    <p>Price: <%= readable_price(@product.price) %></p>
    <p>Quantity Available: <%= @product.quantity %></p>
    <p>Seller: <%= link_to (@product.merchant.username), products_path %></p>
    <p class="categories-buttons">
      Categories:
      <% @product.categories.each do |category| %>
      <%= link_to category.name, category_products_path(category.id) %>
      <% end %>
    </p>

    <% if @product.quantity > 0 %>
    <%= form_tag(product_add_to_cart_path(@product.id), method: :patch) do %>
    <%= label_tag :quantity %>
    <%= select_tag :quantity, options_for_select(1..@product.quantity)%>
    <%= submit_tag 'Add To Cart', class: "button" %>
    <% end %>
    <% else  %>
    <button type="button" class="button secondary" disabled>Sold Out</button>
    <% end %>
  </div>

  <div class="large-6 columns">
    <%= link_to image_tag "https://loremflickr.com/500/500/felt,dessert/all?", alt: 'link to', class: "product" %>
  </div>
</section>

<section id="reviews">
  <h2>Reviews</h2>
  <%= link_to "Add Review", products_path, class: "button" %>
  <% if @product.reviews.length == 0 %>
    <h3>Currently no reviews for this product.</h3>
  <% else %>

  <% end %>
</section>
