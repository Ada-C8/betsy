<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>


  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :quantity_avail %>
  <%= f.text_field :quantity_avail %>

  <%= f.label :product_category %>
  <%= f.select :categories, options_for_select(Category.all.collect{ |c| c.name}), { :prompt => "SELECT UP TO 5"}, { :multiple => true, :size => 5 } %>


  <%= f.label :upload_product_photo %>
  <%= f.file_field :photo %>

  <%= f.label :status %>
  <%= f.select(:available, ["Available", "Retired"])%>

  <%= f.submit %>
<% end %>
