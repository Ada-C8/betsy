<h1> Products by Merchant</h1>

<% @products_by_merchant.each do |merchant, products| %>

  <h3><%= merchant.capitalize %></h3>
  <!-- TODO: Appropriate styling for merchant name (capitalize first last name)-->
    <table>
      <thead>
        <tr>
          <th>
            Product name
          </th>
          <th>
            Category
          </th>
          <th>
            Description
          </th>
          <th>
            Price
          </th>
          <th>
            Available Quantity
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% products.each do |product| %>
          <td>
            <%= link_to "#{product.name}", product_path(product.id)%>
          </td>
          <td>
            <%= print_categories(product) %>
          </td>
          <td>
            <%= product.description %>
          </td>
          <td>
            <%= product.price %>
          </td>
          <td>
            <%= product.quantity %>
          </td>
        </tr>
        <% end %>
      </tbody>

    </table>
<% end %>
