<%= form_for @product, :html => { :multipart => true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :quantity_avail %>
  <%= f.text_field :quantity_avail %>

  <%= f.label :merchant %>
  <%= f.text_field :merchant %>

  <%= f.label :upload_product_photo %>
  <%= f.file_field :photo %>

  <%= f.submit %>
<% end %>
