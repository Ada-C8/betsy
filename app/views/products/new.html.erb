<section class="row">
  <h3>Create new product </h3>
  <%= form_for @product do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <%= f.label :stock %>
      <%= f.text_field :stock %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :image_url %>
      <%= f.text_field :image_url %>

      <%= f.submit class: "button"%>

  <% end %>
</section>
