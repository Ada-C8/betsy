<div class="row">
<section class="new-product small-12 column">
  <div>
    <%= link_to "Add a New Category", new_category_path, class: "button" %>
  </div>
  <% button_text ||= "Add Product" %>
  <% form_class ||= "" %>
  <% hide_placeholder_text ||= false %>

  <h3> Add a new product:</h3>
    <%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :price %>
    <%= f.number_field :price, value: f.object.price.to_f, step: 0.01%>

    <%= f.label :category %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name  %>

    <%= f.label :image_url %>
    <%= f.text_field :image_url %>

    <%= f.label :inventory%>
    <%= f.number_field :inventory %>

    <%= f.label :description %>
    <%= f.text_field :description%>

    <%= f.submit button_text %>
  <% end %>
</section>
</div>
