<div class="field">
  <%= form_for @category do |f| %>
  <%= f.label "Select 1 or more categories" %><br />
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
    <div class="collection-check-box">
      <%= b.check_box %>
      <%= b.label %>
    </div>
  <% end %>
<%end%>
</div>
