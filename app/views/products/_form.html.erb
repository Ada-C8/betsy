<%= form_for @product do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <% Category.all.each do |category| %>
      <%= f.label :to, category.name %>
          <%= check_box_tag 'to[]', category.name %>
      <% end %>

  <%= f.submit "submit" %>
<% end %>
