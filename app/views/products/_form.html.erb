<%= form_for @product do |f| %>

  <%= f.label "Name" %>
  <%= f.text_field :name %>

  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all, :id, :category_name) %>

  <%= f.label "Description" %>
  <%= f.text_field :description %>

  <%= f.label "Price" %>
  <%= f.text_field :price %>

  <%= f.label "Number in Stock" %>
  <%= f.text_field :stock %>

  <%= f.label "Photo URL" %>
  <%= f.url_field :photo_URL %>

  <%= f.submit button_text, :class=>"button"  %>

  <% end %>
