<section>
<ul class="new-product">

  <%= form_for(@product, multipart: true) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :categories %>
    <%= f.collection_check_boxes :categories, Category.all, :id, :name do |b|%>
    <div class="checkbox">
      <%= b.label %>
      <%= b.check_box %>
    </div>
    <% end %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :stock %>
    <%= f.select :stock, Product::STOCK %>

    <%= f.label :quantity %>
    <%= f.text_field :quantity %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :photo %>
    <%= f.file_field :photo %>


    <%= f.submit class: "button" %>
  <% end %>
  </ul>
</section>
