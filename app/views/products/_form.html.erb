<section>
  <%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :category %>
    <%= f.text_field :category %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :stock %>
    <%= f.select :stock, Product::STOCK %>

    <%= f.label :quantity %>
    <%= f.text_field :quantity %>

    <%= f.label :photo_url %>
    <%= f.text_field :photo_url %>


    <%= f.submit class: "button" %>
  <% end %>
</section>
