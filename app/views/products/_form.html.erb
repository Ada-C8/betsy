<section class="row">

  <section class="product_form">
      <%= form_for @product do |f| %>
      <article>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :price %>
        <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: "", unit: ""), min: 0.01, step: 0.01 %>

        <%= f.label :stock, "Quantity in Stock" %>
        <%= f.select :stock, options_for_select(1..20, @product.stock) %>

        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.label :image %>
        <%= f.text_field :image  %>

        <%= f.label :category %>
        <%= f.collection_select(:category_ids, Category.all, :id, :name, {include_blank: "Please select", label: false }, { multiple: true }) %>

        <%= f.submit button_name %>
      </article>
      <% end %>
  </section>

</section>
