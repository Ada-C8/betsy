<section>
  <%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name%>

    <%= f.label :category %>
    <%= f.select :category, options_from_collection_for_select(Category.all, "id", "name")%>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :stock %>
    <%= f.select :stock, Product::STOCK %>

    <%= f.label :quantity %>
    <%= f.text_field :quantity %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :photo %>
    <%= f.file_field :photo %>


    <%= f.submit class: "button" %>
  <% end %>
</section>
