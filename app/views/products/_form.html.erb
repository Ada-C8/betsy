<%= form_for @product do |f| %>

  <%= f.hidden_field :user_id, value: session[:user_id] %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <% Category.all.each do |category| %>
    <%= f.label :category_ids, category.name, class:"checkbox"%>
    <%= f.check_box :category_ids, class:"checkbox"%>
  <% end %>

  <%= f.submit "submit" %>
<% end %>
