<%= form_for @product do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name %>
  <%= f.hidden_field :merchant_id %>
  <%= f.label :Price %>
  <%= f.text_field :price %>
  <%= f.label :"Choose a category" %>
  <%= f.select(:category, Product.pluck(:category).uniq, {}, {multiple: true})  %>
  <%= f.label :"Add a new category" %>
  <%= f.text_field :category  %>
  <%= f.label :Quantity %>
  <%= f.text_field :quantity %>
  <%= f.submit submit_name, class: "button"  %>
<% end %>

