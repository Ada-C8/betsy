<h1>treebae Products</h1>
<%= form_tag(root_path, method: :get) do %>
  <%= label_tag(:category, "Category") %>
  <%= select_tag "category", options_for_select(@categories, params["category"]), include_blank: "all" %>
    <%= label_tag(:merchant, "Merchant") %>
    <%= select_tag "merchant", options_from_collection_for_select(Merchant.all, "id", "username", selected: params[:merchant].to_i), include_blank: "all" %>
  <%= submit_tag("Submit", class: "button") %>
<% end %>


<article class = "card">

  <% @products.each do |product| %>
    <% if product.photo_url %>
      <figure>
        <img src= "<%= product.photo_url %>" alt "<%= product.photo_url %>" height: "250" width: "250" />
      </figure>
    <% end %>
    <h4><%= link_to(product.name, product_path(product.id)) %></h4>
    <h4>US $<%= product.price%></h4>
    <%= link_to "Add to cart", add_order_item_path(session[:order_id], product.id), method: :patch, class: :button %>
  <% end %>

</article>
