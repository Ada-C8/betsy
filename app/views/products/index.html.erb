<h1>All Products</h1>

<h2>Categories:</h2>
<% @products.each do |product| %>
<div class="product" >
  <p>Name: <%= link_to product.name, product_path(product.id) %></p>
  <p>Price: $<%= '%.2f' % product.price %></p>
  <p>Description: <%= product.description %></p>
  <p class="image"><%= image_tag "#{product.photo_url}", alt:"image", size: "100x100"%></p>

  <br>
</div>
<% end %>

<%= link_to "Add a Product", new_product_path, class: "button" %>
