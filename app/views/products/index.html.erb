<section class="all-products">
  <h1 class="motto">All things that come in 3s</h1>
  <!-- <span class="add"><%= link_to "Add a Product", new_product_path, class: "button" %></span> -->

  <% Category.all.each do |category| %>
    <h5 class="category-name">
      <%= link_to category.name.capitalize, category_path(category.id) %>
    </h5>

    <section class="row">
    <% category.products.not_retired.each do |product| %>
      <section class="category-products small-2 large-4 columns">
        <div class="crop-image">
          <%=link_to product_path(product.id) do %>
            <%= image_tag product.photo_url %>
          <% end %>
        </div>
      <p class="prod-name"><%= link_to product.name.capitalize, product_path(product.id) %> |
      $<%='%.2f' % product.price%></p>
      </section>
    <% end %>
    </section>
  <% end %>
</section>


