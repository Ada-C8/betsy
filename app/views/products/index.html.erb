    <h3><%= link_to product.name, product_path(product.id) %></h3>
    <ul>
      <li><strong>Price:</strong> $<%= product.price %></li>
      <li>Number Available: <%= product.items.where(purchase_status:false).count %></li>
      <li>Number Available: <%= product.items.where(purchase_status:false).count %></li>
    </ul>
  </article>

  <% end %>
</section>
