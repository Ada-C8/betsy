<h1>Foodsie Products</h1>
<ul>
  <% @products.each do |product| %>
  <%= link_to image_tag "https://loremflickr.com/500/500/felt,dessert/all?" %>

  <li><%= link_to(product.name, product_path(product.id)) %></li>
  <p>Description: <%= product.description %></p>
  <p>Price: <%= readable_price(product.price) %></p>
  <p>Quantity Available: <%= product.quantity %></p>
  <p>Seller: <%= link_to (product.merchant.username), products_path %></p>
  <% end %>
</ul>
