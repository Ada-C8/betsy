<h1>Foodsie Products</h1>
<ul>
  <% @products.each do |product| %>


  <li><%= link_to(product.name, product_path(product.id)) %></li>
  <li>Description: <%= product.description %></li>
  <li>Price: <%= readable_price(product.price) %></li>
  <li>Quantity Available: <%= product.quantity %></li>
  <li>Seller: <%= product.merchant.username %></li>
  <li>
    Categories:
    <% product.categories.each do |category| %>
      <span class="button"><%= category.name %></span>
    <% end %>
  </li>
  <% end %>
</ul>
