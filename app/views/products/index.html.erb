<h2 class="align-center"><%= @category.name %></h2>

<div class="row">

  <% @products.each do |product| %>

  <div class="small-4 columns align-center">
    <%= product.name %>
    <%= link_to image_tag(product.photo_url), product_path(product.id), class: "thumbnail align-center", alt: product.name %>
    <p>
      $ <%= product.price %>
    </p>
  </div>

  <% end %>

</div>
