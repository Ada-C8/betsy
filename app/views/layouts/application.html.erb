<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" href="https://lh6.ggpht.com/7cfXEzMehr9OvKbOyL1p3c454kWKEmBON9CJ1NvhZFv-cJY0aTnX7pKBTG8vL-oQOQ=w300">

    <title><%= content_for?(:title) ? yield(:title) : "Sourceress" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Josefin+Slab" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Berkshire+Swash" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cinzel" rel="stylesheet">

    <%= yield :head %>
  </head>

  <body>

<% if current_page?(root_path) %>
  <% else %>
  <div class="row">
    <header class="navigation large-12 columns">

      <button class="logo"><%= link_to "Sourceress", root_path %></button>

      <section class="dropdown">
        <ul class "browse-menu">
          <button class="dropdown-button-browse">Browse</button>
          <div class="dropdown-content-browse">
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "Merchants", merchants_path %></li>
            <li><%= link_to "Categories", categories_path %></li>
          </div>
        </ul>
      </section>

      <section class="dropdown">
        <ul class="cart-menu">
          <button class="dropdown-button-cart">
            <% if session[:order_id] == nil %>
            <%= link_to "Shopping Cart", orders_path, method: :post %>
            <% else %>
            <%= link_to "Shopping Cart", order_path(session[:order_id]) %>
            <% end %>
          </button>
        </ul>
      </section>

    <% if session[:user_id] != nil %>
      <section class="dropdown">
        <ul class "browse-menu">
          <button class="dropdown-button-browse">Merchant</button>
          <div class="dropdown-content-browse">
            <li><%= link_to "New Category", new_category_path %></li>
            <li><%= link_to "List Product", new_product_path %></li>
            <li><%= link_to "Account Products View", merchant_products_path(session[:user_id]) %></li>
            <li><%= link_to "Account Orders View", merchant_orders_path(session[:user_id]) %></li>
          </div>
        </ul>
      </section>
      <% end %>

      <section class="dropdown">
        <ul class="login-menu">
          <button class="dropdown-button-login">
          <% if session[:user_id] == nil %>
           <%=link_to "Login", '/auth/github' %>
          <% else %>
           <%=link_to "Logout", logout_path, method: :post %>
           <% end %>
            </button>
          <div class="dropdown-content-login">
            <li>Testing</li>
            <li></li>
          </div>
        </ul>
      </section>

  </header>
  </div>

<% end %>


  <% if flash[:result_text] or flash[:messages] %>
  <section class="row status <%= flash[:status] %>">
    <h3><%= flash[:status] == :failure ? "A problem occurred: " : "" %><%= flash[:result_text] %></h3>
    <% if flash[:messages] %>
    <ul>
      <% flash[:messages].each do |name, problems| %>
      <% problems.each do |problem| %>
      <li><%= name %>: <%= problem %></li>
      <% end %>
      <% end %>
    </ul>
    <% end %>
  </section>
  <% end %>

<section class="content">
  <%= yield %>
</section>


</body>
</html>
