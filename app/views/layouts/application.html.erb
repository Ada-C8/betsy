  <%###############  HERO HEADER #################### %>

  <section class="hero">
    <div class="hero-section-text">
      <%= link_to root_path do %>
        <h1>STARMART</h1>
      <% end %>
    </div>
  </section>





  <%###############  FLASH MESSAGES #################### %>

  <section class="row status <%= flash[:status] %>">

    <% if  flash[:status] == :failure %>
      <%= "A problem occurred: #{flash[:message]}" %>
    <% else %>
      <%= flash[:message] %>
    <% end %>

  </section>

  <%###############  MAIN CONTENT #################### %>

  <%= yield %>


