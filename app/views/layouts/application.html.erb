<!DOCTYPE html>
<html>
  <head>
    <title>Betsy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="page-header row">
  <h2 class="columns small-12"><%= link_to "NorthWesty", root_path %> <small> Ranking the best of everything</small></h2>
  <nav class="columns small-12">
    <%= link_to "Products", products_path, class:"button" %>
    <%= link_to "Users", users_path, class:"button"  %>
    <div class="float-right">
      <% if session[:user_id]%>
        <% @user = session[:user_id]%>
        <%= link_to "Logged in as #{User.find(@user).username}", user_path(@user), class:"button" %>
        <%= link_to "Log out", logout_path, method: :post, class:"button" %>
      <%else%>
        <%= link_to "Log in with Github", "/auth/github", class:"button"%>
      <%end%>
    </div>
  </nav>
</header>

    <section class="flash">
      <% flash.each do |name, message| %>
        <div class="<%= name %>"><%= message %></div>
      <% end %>
    </section>
    <%= yield %>
  </body>
</html>
