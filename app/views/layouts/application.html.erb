<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? yield(:title) : "3Bae" %></title>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <%= link_to "Home", root_path %>
  </header>

  <header class="page-header row">
    <h2 class="columns small-12">
      <%= link_to "3Bae", root_path %>
      <small class="good">Good Things Happen in Threes</small>
    </h2>

    <nav class="columns small-12">
      <div class="dropdown">
        <span class="button"><%= link_to "All merchants", merchants_path  %></span>
        <div class="dropdown-content">
          <% Merchant.all.each do |merchant| %>
          <%= link_to "#{merchant.name}", merchant_path(merchant.id) %>
          <% end %>
        </div>
      </div>

      <%= link_to "View all products", products_path, class: "button" %>


      <div class="dropdown">
        <span class="button"><%= link_to "All categories", categories_path  %></span>
        <div class="dropdown-content">
          <% Category.all.each do |category| %>
          <%= link_to "#{category.name}", category_path(category.id)%>
          <% end  %>
        </div>
      </div>


      <% if session[:merchant_id] %>
      <%= link_to "Create new category", new_category_path, class: "button "%>
      <% end %>


      <div class="float-right">
        <%= link_to session[:cart] ? order_path(session[:cart]) : products_path do %>
        <%= image_tag 'cart.png', size: "40x40" %>
        <% end %>

        <% if session[:merchant_id] %>
        <%= link_to "Log out", logout_path, class: "button" %>
        <% else %>
        <%= link_to "Log in", '/auth/github', class: "button" %>
        <% end %>
      </div>
    </nav>
  </header>
  <main class="wrap">


    <% if flash[:message] %>
    <section class="row status <%= flash[:status] %>">
      <%= flash[:message] %>
    </section>
    <% end %>

    <% if flash[:result_text] or flash[:messages] %>
    <section class="row status <%= flash[:status] %>">
      <h3><%= flash[:status] == :failure ? "A problem occurred: " : "" %><%= flash[:result_text] %></h3>
      <% if flash[:messages] %>
      <ul>
        <% flash[:messages].each do |name, problems| %>
        <% problems.each do |problem| %>
        <li><%= name %>: <%= problem %></li>
        <% end %>
        <% end %>
      </ul>
      <% end %>
    </section>
    <% end %>

    <%= yield %>
  </main>
</body>
</html>
