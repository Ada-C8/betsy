<div class="merchant-show row">
  <%= render partial: "nav_aside" %>
  <section class="small-8 columns">
    <h3>Revenue Summary</h3>
    <table>
      <thead>
        <tr>
          <th>Type</th>
          <th>Order Count</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% ["paid", "pending"].each do |type| %>
          <% order_items = Merchant.find_by(params[:merchant_id]).order_items_by_status(type) %>
          <% if order_items.present? %>
            <tr>
              <td><%= "#{type}" %></td>
              <!-- <td><%= Merchant.number_of_items_sold(order_items) %></td> -->
              <td><%= order_items.count %></td>
              <td>amount</td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
