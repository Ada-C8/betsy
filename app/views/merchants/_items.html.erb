<%# partial for displaying merchant order items %>

<% if items && items != [] %>
  <% @type = items[0].status %>
  <section class="<%= @type %>">
    <h2><%= @type.capitalize %> </h2>

    <table class="table <%= @type %>">
      <thead>
        <tr>
          <th>Order Number</th>
          <th>Product</th>
          <th>Date Ordered</th>
          <th>Status</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th>Change Status</th>
        </tr>
      </thead>

      <tbody>
        <% items.each do |item| %>
        <tr>
          <td><%= item.order_id %></td>
          <td><%= link_to item.product.name, product_path(item.product) %></td>
          <td><%= item.created_at.strftime('%b %-d, %Y') %></td>
          <td><%= item.status %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.price) %></td>
          <td><%= link_to "change status path", '#' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>
<% end %>
