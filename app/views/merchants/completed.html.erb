<h2 class = 'page-title'>Completed Orders</h2>

<% if @order_products.empty? %>
  <div class="no-orders">
    <h4>You have no completed orders at this time!</h4>
  </div>
<% else %>
  <% @order_products.each do |op| %>
    <div class="order-product row">

      <span class="medium-2 columns product-img product-thumbnail" <%= (raw "style=\"background-image: url('#{op.product.image_url}');\"") unless (op.product.image_url.nil? || op.product.image_url.empty?) %> > </span>
      <span class="medium-10 columns info">

        <div class="product-list row">
          <h4 class="medium-3 columns"><%= op.product.name %></h4>
          <h4 class="medium-3 columns"><small>Quantity: </small><%= op.quantity %></h4>
          <h4 class="medium-3 columns"><small>Price: </small><%= money(op.product.price) %></h4>
          <h4 class="medium-3 columns"><small>Total: </small><%= money(op.total) %></h4>
        </div>

        <div class="row">
          <div class="row medium-9 columns">

            <p class="medium-10 columns">
              Customer: <%= op.order.cust_name %>
            </p>
            <p class="medium-10 columns end">
              <%= op.order.cust_addr %>
            </p>
          </div>
        </div>
      </span>

    </div>
  <% end %>
<% end %>
