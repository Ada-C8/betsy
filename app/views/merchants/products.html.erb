<h2><%= @merchant.username%>'s Products</h2>
<% if @access %>
  <%= link_to "Add Product", new_product_path, class: "button"%>
<% end %>

<% unless @products.empty? %>
<table width="90%" align="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Inventory</th>
      <th>Img</th>
      <% if @access %>
        <th>&nbsp</th>
        <th>&nbsp</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.inventory %></td>
        <td><%= image_tag product.photo_url, class:"thumbnail mini"%></td>
        <% if @access %>
          <td><%= link_to "Edit", edit_product_path(product)%></td>
          <td><%= link_to "Retire Product"%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h3>
    <strong>No Products:</strong> Merchant has no products.
  </h3>
<% end %>
