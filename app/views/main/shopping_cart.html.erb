<section class="view-cart">
  <h2 class="page-title">Shopping Cart</h2>

  <% @products.each do |order_product| %>
    <p><%= order_product.name %></p>
    <p><%= order_product.total %></p>
    <% puts order_product, order_product.name, order_product.total %>
  <% end %>
  <p>cart total</p>
  <%= total(@products)%>
</section>
