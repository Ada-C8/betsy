<section>
  <%= form_for @payment do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :mailing_address %>
    <%= f.text_field :mailing_address %>

    <%= f.label :cc_name %>
    <%= f.text_field :cc_name %>

    <%= f.label :cc_expiration %>
    <%= f.text_field :cc_expiration %>

    <%= f.label :cc_number %>
    <%= f.integer_field :cc_number %>

    <%= f.label :cc_ccv %>
    <%= f.integer_field :cc_ccv %>

    <%= f.label :billing_zip %>
    <%= f.integer_field :billing_zip %>

    <%= f.submit class: "button" %>
  <% end %>
</section>
