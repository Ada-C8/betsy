<section>
  <%= form_for @review do |f| %>

    <%= f.hidden_field :product_id, :value => params[:product_id] %>

    <%= f.label :rating %>
    <%= f.select :rating, options_for_select([1,2,3,4,5])%>

    <%= f.label :text_review %>
    <%= f.text_area :text_review %>

    <%= f.submit class: "button" %>
  <% end %>
</section>
