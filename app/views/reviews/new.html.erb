<h1>Leave a review for</h1>

<% if @review.errors.any? %>
    <ul class="errors">
      <% @review.errors.each do |column, message| %>
      <li> <strong><%= column.capitalize %> </strong> <%= message %></li>
      <% end %>
    </ul>
  <% end %>


<%= form_for @review do |f| %>
  <%= f.hidden_field :product_id %>
  <%= f.label :Rating %>
  <%= f.select :rating, options_for_select(1..5) %>
  <%= f.label :Title %>
  <%= f.text_field :title %>
  <%= f.label :Review %>
  <%= f.text_area :review_text %>
  <%= f.submit("submit", class: "button") %>
<% end %>
