<%= form_for @review do |f| %>
  <%= f.label :rating  %>
  <%= f.select :rating, options_for_select([1, 2, 3, 4, 5], :selected => @review.rating) %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.hidden_field :product_id, value: @review.product_id %>

  <%= f.submit button, class: 'button' %>
<% end %>
