
<h2>Total Revenue: <%= format_price(@user.total_revenue) %></h2>
<table>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Status</th>
  </tr>
<% @user.orders.each do |order| %>
  <tr>
    <td><%= link_to order.id, order_path(order.id) %></td>
    <td><%= format_date(order.created_at) %></td>
    <td><%= order.status %></td>
  </tr>
<% end %>
</table>
