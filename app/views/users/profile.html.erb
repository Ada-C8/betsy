<h1><%=@user.username%>'s Profile</h1>
<p>
  Not <%=@user.username%>? <%=link_to "Log out!", logout_path%>
</p>

<%= link_to "Manage your Orders" %>
<%= link_to "Create a New Product", new_product_path, class:"button" %>

<section class="my_products">
  <% @user.products.each do |product| %>
    <article class="products">
      <h3><%= product.name %></h3>
      <ul>
        <li>
          <%= product.price %>
        </li>
        <li>
          <%= product.description %>
        </li>
        <li>
          Number in Stock: <%=product.items.count%>
        </li>
        <li>
          <%= link_to "Edit this Product", edit_product_path(product.id), class:"button"%>
        </li>
        <li>
         <%= link_to "Edit Inventory", inventory(product.id), class:"button"%>
        </li>
      </ul>
      <%end%>
    </article>
</section>
