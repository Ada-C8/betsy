<section class="merchant-show">
<% if @user %>
<h1>User Summary: <%= @user.username%></h1>
<p>Joined site <%= @user.created_at.strftime("%b %d, %Y") %></p>
<% end %>

<p><%= link_to "Add Product", new_product_path %> | <%= link_to "Add Category", new_category_path %></p>
<p><%= link_to "Order Summary" %></p>

<h4>Products</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stock</th>
      <th>Price</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user.products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product.id) %></td>
      <td><%= product.stock %></td>
      <td><%= product.price %></td>
      <td><%= link_to "Edit", edit_product_path(product.id) %></td>
      <td><%= link_to "Retire" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</section>
